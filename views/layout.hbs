  <script>
    document.addEventListener("DOMContentLoaded", function () {

      // Consume example of UV index API
      axios.get('/services/openuv', { params: { lat: 27, lng: 133 } })
        .then(function (response) {
          console.log("EL INDICE DE UV ES " + JSON.stringify(response.data.uv));
        })
        .catch(function (error) {
          console.log(error);
        })

      // Consume example of contamination API
      axios.get('/services/air')
        .then(function (response) {
          console.log("EL INDICE DE CONTAMINACION ES " + JSON.stringify(response.data.contam));
        })
        .catch(function (error) {
          console.log(error);
        })

      // Consume example of NASA API for getting Earth pic
      axios.get('/services/epic/lastPhoto')
        .then(function (response) {
          console.log("LA URL DE LA FOTO ES " + JSON.stringify(response.data.photoUrl));
        })
        .catch(function (error) {
          console.log(error);
        })
    });
  </script>
